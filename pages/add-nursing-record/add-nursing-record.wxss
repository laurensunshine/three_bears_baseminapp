.nursing-log{
    padding: 28rpx;
    background: #fff;
    border-radius: 8px;
    margin: 20rpx 0;
}
.nursing-title{
    font-size: 13px;
    margin-bottom: 20rpx;
}
.log-content{
    position: relative;
}
.log-content textarea{
    width:638rpx;
    height: 236rpx;
    font-size: 12px;
    border: 1px solid #fbfafa;
    padding: 10rpx;
}
.number{
    position: absolute;
    right: 16rpx;
    bottom: 12rpx;
    font-size: 10px;
    color: rgba(0,0,0,0.41);
}
.uploads{
    background: #fff;
    border-radius: 8px;
    padding: 28rpx;
}



