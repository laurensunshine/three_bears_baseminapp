@import "/asset/style/wuxi.wxss";
page{
    background: #fbfafa;
}
.wrap{
    padding:24rpx 24rpx 140rpx;
}
.header{
    display: flex;
    align-items: center;
    background: #fff;
    padding: 24rpx 30rpx;
    border-radius: 8px;
}
.avatar{
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background: #673495;
}
.client-name{
    font-size: 14px;
}
.add-item{
    background: #fff;
    border-radius: 8px;
    margin: 20rpx 0;
}
.pro,
.tec{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 20rpx;
  
}
.pro-name,
.tec-name{
    font-size: 14px;
}
.picker{
    display: flex;
    align-items: center;
}
.picker-name{
    font-size: 12px;
}
.img image{
    width: 18rpx;
    height: 24rpx;
    margin-left: 10rpx;
}
.line{
    width: 672rpx;
    height: 2rpx;
    background: #979797;
    opacity: 0.09;
}
