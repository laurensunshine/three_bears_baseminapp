@import "/asset/style/shade.wxss";
page {
    background: #fbfafa;
}

.wrap {
    padding: 24rpx;
}

.header {
    display: flex;
    justify-content: space-between;
}

.member{
    width: 646rpx;
    height: 148rpx;
    padding: 30rpx 28rpx;
    border-radius: 8px;
    background: #fff;
}

.money-text, .times-text {
    display: flex;
    align-items: center;
}

.text {
    font-size: 14px;
    font-family: SimHei;
    color: rgba(0, 0, 0, 0.41);
    margin: 0 24rpx 20rpx 0;
}

.number {
    font-size: 22px;
    color: #f59798;
    font-weight: 400;
    font-family: SimHei;
}

/* 单位 */

.per {
    font-size: 12px;
    color: #f59798;
    font-weight: 400;
    font-family: SimHei;
}

/* 内容 */

.header-sift {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.sift {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin: 14rpx 26rpx;
}

.s-name {
    font-size: 14px;
    color: #F59798;
    margin-right: 16rpx;
}

.sift image {
    width: 28rpx;
    height: 30rpx;
    color: #F59798;
}

.title {
    padding: 20rpx 28rpx;
    font-size: 14px;
    font-weight: 600;
    font-family: SimHei;
}

.franchiese-item {
    display: flex;
    align-items: center;
    /* justify-content: space-between; */
    padding: 30rpx;
    background: #fff;
    border-radius: 8px;
    margin-bottom: 20rpx;
}

.avatar image {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    background: #979797;
}
.franchiese{
    flex: 1;
    margin-left: 20rpx;
}
.franchiese-name {
    font-size: 14px;
    margin-bottom: 20rpx
}
.vip-menbers{
    font-size: 14px;
    color: #FF3032;
}

.left, .cards-number {
    font-size: 12px;
    color: rgba(0, 0, 0, 0.41);
}

.total-member{
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* 遮罩层 */

.shop-name {
    margin-top: 50rpx;
}