@import "/asset/style/button.wxss";

page{
    background: #fbfafa;
}
.wrap{
   padding: 24rpx; 
}

.change-box{
    background: #fff;
    border-radius: 8px;
    padding: 0 40rpx;
}
.change-item{
    display:flex;
    align-items: center;
    justify-content: space-around;
    padding: 30rpx 0;
}
.phone,
.captchar{
    width: 112rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 14px;
    text-align: justify;
    margin-right:  10rpx;
    /* margin-top: 10rpx; */
}

.phone::after,
.captchar::after{
    width: 100%;
    display: inline-block;
    content: ''
}
  
.change-input
{
    width:462rpx;
    margin-top: 8rpx;
}

.time{
    width: 100rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 12px;
    color: rgba(0,0,0,0.41);
    border-left:1px solid rgba(0,0,0,0.3)
}
.line{
    width: 636rpx;
    height: 4rpx;
    background: #979797;
    opacity: 0.1;
}
