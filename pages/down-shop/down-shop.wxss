/* 列表 */
.down-shop-item{
    padding: 20rpx 28rpx;
    background: #fff;
    border-radius: 8px;
    margin-bottom: 20rpx;
}
.shop-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    
}
.shop-name{
    font-size: 14px;
}
.down-time{
    font-size: 11px;
    color: rgba(0,0,0,0.41);
}
.down-detail{
    display: flex;
    align-items: center;
}
.avatar{
    margin: 20rpx 20rpx 20rpx 0;
}
.avatar image{
    width: 92rpx;
    height: 92rpx;
    border-radius: 50%;
}
.teacher-name{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 14px;
    margin-bottom: 4rpx;
}
.dura-time{
    height: 34rpx;
    line-height: 34rpx;
    font-size: 12px;
    color: rgba(0,0,0,0.41);
}
.total-day{
    text-align: right;
}
.total{
    font-size: 12px;
   
}
.dollar{
    font-size: 12px;
    color: #ff3032;
}
.salary{
    font-size: 14px;
    font-weight: 600;
    font-family: SimHei;
    color: #FF3032;
}
.passed{
    width: 216rpx;
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    font-size: 14px;
    color: #fff;
    background: #f59798;
    border-radius: 54px;
    margin-left: 436rpx;
    margin-top: 20rpx;
}