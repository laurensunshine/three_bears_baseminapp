
page{
    background: #fbfafa;
}
.wrap{
   padding: 24rpx; 
}

.change-box{
    background: #fff;
    border-radius: 8px;
    padding:0 30rpx;
}
.change-item{
    display:flex;
    align-items: center;
    justify-content: space-around;
    padding: 24rpx 0;
}
.old-passowrd,
.new-passowrd,
.re-passowrd{
    width: 112rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 14px;
    text-align: justify;
    margin-right:  10rpx;
    margin-top: 8rpx;
}

.old-passowrd::after,
.new-passowrd::after,
.re-passowrd::after{
    width: 100%;
    display: inline-block;
    content: ''
}
 .area-detail{
     display: flex;
     justify-content: space-between;
     align-items: center;
 } 
.change-input
{
    width:462rpx;
    margin-top: 8rpx;
    padding-left: 14rpx;
    font-size: 12px;
}

.line{
    width: 636rpx;
    height: 4rpx;
    background: #979797;
    opacity: 0.1;
}

.button{
    display: flex;
    padding: 24rpx;
    position: fixed;
    bottom: 24rpx;
}
.del,
.edit{
    width: 332rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    border-radius: 76px;
}
.del{
    background: #FBEFEE;
    color: #F59798;
    margin-right: 36rpx;
}
.edit{
    background: #F59798;
    color: #fff;
}