@import "/asset/style/shade.wxss";

page {
    background: #fbfafa;
}

.wrap {
    padding: 24rpx;
}

.header image {
    width: 702rpx;
    height: 308rpx;
    border-radius: 8px;
}

.pro-list {
    display: flex;
    flex-wrap: wrap;
    /* justify-content: space-around; */
}

.pro-item {
    width: 25%;
    text-align: center;
    margin: 16rpx 0;
}

.pro-icon image {
    width: 96rpx;
    height: 96rpx;
    margin-bottom: 20rpx;
}

.pro-name {
    font-size: 13px;
}

.item-name {
    font-size: 13px;
    text-align: center;
}

/* 下店筛选 */

.header-sift {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.sift {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin: 14rpx 0;
}

.s-name {
    font-size: 14px;
    color: #F59798;
}

.sift image {
    width: 28rpx;
    height: 30rpx;
    color: #F59798;
}

/* 下店 */

.line {
    width: 666rpx;
    height: 2rpx;
    background: #f5f5f5;
}

.down-shop-item {
    border-radius: 8px;
    background: #fff;
    box-shadow: 0 0 2px 2px rgba(250, 243, 243, 0.3);
    padding: 0 22rpx;
}

.down-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 0;
}

.shop-name {
    font-size: 14px;
}

.salary {
    color: #FF3032;
    font-weight: 800;
}

.dollar {
    font-size: 12px;
}

/* 详细信息 */

.shop-detail {
    display: flex;
    align-items: center;
    padding: 30rpx 0;
    margin-bottom: 20rpx;
}

.avatar image {
    width: 138rpx;
    height: 138rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}


.teacher-name {
    font-size: 14px;
}

.down-time, .notcie {
    font-size: 12px;
    color: rgba(0, 0, 0, 0.41);
}

.total-days {
    font-size: 12px;
    margin-left: 170rpx;
}