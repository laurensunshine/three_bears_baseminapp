page{
    background: #fbfafa;
}
.wrap{
    padding:0 24rpx;
}
.nrusing-item{
    background: #fff;
    border-radius: 8px;
    padding: 30rpx 36rpx;
    margin:24rpx 0; 
}
.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.vip-detail{
    display: flex;
    align-items: center;
}
.avatar{
    margin-right: 20rpx;
}
.avatar image{
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
}
.vip-name{
    font-size: 14px;
    margin-bottom: 14rpx;
}
.nursing-name,
.nursing-time{
    font-size: 12px;
    color: rgba(0,0,0,0.41);
}
.tec-name{
    font-size: 13px;
    margin-top: 26rpx;
}
.tag-list{
    display: flex;
    flex-wrap: wrap;
    margin-top: 16rpx;
}
