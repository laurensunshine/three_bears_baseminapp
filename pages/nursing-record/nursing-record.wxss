.nursing-log{
    margin-top: 16rpx;
}
.log-content{
    font-size: 12px;
}
.log-pics{
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 16rpx;
}
.log-pics image{
    width: 200rpx;
    height: 150rpx;
}
/* 按钮 */

.add{
    position: fixed;
    bottom: 24rpx;
    left: 24rpx;
    width: 702rpx;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    font-size: 16px;
    border-radius: 74px;
    background: linear-gradient(to bottom,#FF9FA0,#fbefef);
    color: #fff;
}
.block{
    width: 750rpx;
    height: 24rpx;
    background: #fbfafa;
    position: fixed;
    bottom: 0;
}