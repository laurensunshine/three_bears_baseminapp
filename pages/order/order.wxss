page{
    background:#fbfafa ;
}
.wrap{
    padding: 24rpx;
}
.person{
    width: 634rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 8px;
    background: #fff;
    padding: 36rpx 34rpx;
}
.client{
    display: flex;
    align-items: center;
}
.avatar image{
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.p-name{
    font-size: 14px;
}
.p-phone{
    font-size: 12px;
    color: #9F9F9F;
}
/* .more image{
