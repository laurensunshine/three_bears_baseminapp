page{
    background: #fbfafa;
}
.wrap{
    padding: 24rpx;
}
.detail-box{
    /* height: 670rpx; */
    background: #fff;
    padding: 10rpx 30rpx 0;
    border-radius: 8px;
}
.detail-item{
    /* height: 106rpx; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 0;
    font-size:14px;
}
.detail-item-avatar{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 14rpx 0;
    font-size:14px;
}
.check-more{
    display: flex;
    align-items: center;
}
.check-more image{
    width: 16rpx;
    height: 24rpx;
    margin-left: 20rpx;
}

.line{
    width: 642rpx;
    height:2rpx;
    background: #F1F1F1;
}

.item-message{
    font-size:12px;
    color:#000;
    opacity: 0.41;
}
.avatar image{
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
}
