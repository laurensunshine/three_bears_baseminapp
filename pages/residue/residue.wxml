<view class="wrap">
    <view class="header">
        <view class="money">
            <!-- <view class="money-text"> -->
            <view class="text">总金额</view>
            <view class="total-money">
                <text class="number">2000</text>
                <text class="per">元</text>
            </view>
            <!-- </view> -->
        </view>
        <view class="times">
            <!-- <view class="times-text"> -->
            <view class="text">总次数</view>
            <view class="total-times">
                <text class="number">540</text>
                <text class="per">次</text>
            </view>
            <!-- </view> -->
        </view>
    </view>
    <view class="container">
        <view class="header-sift">
            <view class="title">加盟店</view>
            <view class="sift" bindtap="show">
                <view class="s-name">筛选</view>
                <view>
                    <image src="/asset/images/sift.png" />
                </view>
            </view>
        </view>
        <scroll-view scroll-y="{{true}}">
            <view class="franchiese-list">
                <block wx:for="{{[1,2,3,4,5,6]}}">
                    <view class="franchiese-item">
                        <view class="franchiese-content">
                            <view class="avatar">
                                <image src="/asset/images/t_pic1.png" />
                            </view>
                            <view class="franchiese">
                                <view class="franchiese-name">加盟店(上海店)</view>
                                <view class="residue-money">
                                    <text class="left">剩余金额</text>
                                    <text class="left-money">5,600</text>
                                </view>
                            </view>
                        </view>
                        <view class="residue">
                            <view class="cards-number">卡数：3张</view>
                            <view class="residue-times">
                                <text class="left">剩余次数:</text>
                                <text class="left-times">5次</text>
                            </view>
                        </view>
                    </view>
                </block>
            </view>
        </scroll-view>
    </view>
</view>
<!-- 筛选遮罩层 -->
<view class="shade" bindtap='hide' style='display:{{disp}}'></view>
<!-- 筛选内容区域 -->
<view class="conts" style='display:{{disp}}'>
    <view class="content">
        <view class="s-title" bindtap='hide'>筛选</view>
        <view class="shop-name">
            <view class="text">所属店铺</view>
            <input type="text" class="client-content" />
        </view>
    </view>
    <view class="button">
        <view class="reset">重置</view>
        <view class="submit">确定</view>
    </view>
</view>