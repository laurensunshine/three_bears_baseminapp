/* 日历开始 */

.calendar_title {
    height: 44rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 16px;
    margin-bottom: 20rpx;
}

.calendar_title .icon image {
    width: 18rpx;
    height: 24rpx;
    margin: 5rpx auto;
}

/* 日历 */

.calendar-list {
    background: #fff;
    margin-top: 20rpx;
    border-radius: 8px;
    padding: 20rpx;
}

.calendar {
    /* height: 600rpx; */
    background: #fff;
    border-bottom: 1px solid #D0D0D0;
    font-family: FZZhunYuan-M02S;
}

.header>view {
    display: inline-block;
    width: 14.285%;
    color: rgba(0, 0, 0, 0.41);
    font-size: 14px;
    font-family: SimHei;
    font-weight: 800;
    text-align: center;
    padding: 20rpx 0;
}

.weekMark {
    position: relative;
    width: 80%;
    margin: 0 auto;
}

.weekMark view {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-bottom: 2px solid #69f;
}

.date-box>view {
    position: relative;
    display: inline-block;
    width: 14.285%;
    color: #000;
    text-align: center;
    vertical-align: middle;
}

.date-head {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 12pt;
    font-family: SimHei;
    font-weight: 800;
}

.nowDay .date-head {
    width: 100rpx;
    border-radius: 50%;
    text-align: center;
    color: #fff;
    background-color: #F59798;
    margin: 0 auto;
}

.status-box {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 24rpx;
}

.status-item {
    display: flex;
    align-items: center;
    margin-left: 30rpx;
}

.status-text {
    font-size: 12px;
    color: rgba(0, 0, 0, 0.41);
}

.icon-normal, .icon-leave, .icon-off {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.icon-normal {
    background: #F59798;
}
.icon-off {
    background: #FFE0B0;
}

.icon-leave {
    background: #B0D5FF;
}



