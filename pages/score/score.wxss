page{
    background: #fbfafa;
}
.wrap{
    padding: 24rpx;
}
.score-list{
    padding:0 28rpx;
    background: #fff;
    border-radius: 8px;
}
.score-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 0;
}
.name{
    font-size: 16px;
}
.reason{
    font-size: 14px;
    color: rgba(0,0,0,0.41);
    margin-top: 10rpx;
}
.score-right{
    text-align: right;
}
.money{
    font-size: 14px;
    color: #FF3032;
}
.time{
    font-size: 12px;
    color: rgba(0,0,0,0.41);
    margin-top: 16rpx;
}
.line{
    width: 640rpx;
    height: 2rpx;
    background: #797979;
    opacity: 0.1;
}