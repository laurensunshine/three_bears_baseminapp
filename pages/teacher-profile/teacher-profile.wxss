page{
    background: #fbfafa;
}
.head{
    height: 346rpx;
    position: relative;
}
.head image{
    width: 750rpx;
    height: 264rpx; 
}

.avatar{
  
    position: absolute;
    top: 182rpx;
    left: 50%;
    margin-left: -41px;
}
.avatar image{
    width: 164rpx;
    height: 164rpx;
    border-radius: 50%;
}
.container{
    padding: 0 24rpx 24rpx;
}
.t-intro{
    text-align: center;
    padding: 12px 45px 17px 45px;
}
.name{
    font-size: 16px;
    font-family: SimHei;
}
.experience{
    display: flex;
    margin: 5px 56px 6px 86px;
}
.nation{
    font-size: 12px;
    color: #191919;
}
.seperator{
    width: 1px;
    height: 11px;
    background: #979797;
    font-weight: bold;
    margin: 3px 8px 0 8px;
}
.time{
    font-size: 12px;
}
.cv{

    font-size: 12px;
    color: #9F9F9F;
    text-align: justify;
}

/* 信息 */
.detail-list{
    background: #fff;
    border-radius: 8px;
    margin:  20rpx 0;
    padding: 0 10rpx;
}
.detail-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 34rpx 16rpx;
}
.name{
    font-size: 14px;
}
.detail-content{
    font-size: 12px;
    color: rgba(0,0,0,0.41);
}
.border-line{
    border-bottom: 1px solid #eee;
}






.pics{
    border-radius: 8px;
    background: #fff;
    padding: 14px 12px 18px 16px;
}
.p-title{
    font-size: 14px;
    font-family: SimHei;
}
.p-content{
    display: flex;
    margin-top: 13px;
}
.left{
    margin-right: 10px;
}
.left image{
    width: 200rpx;
    height: 188rpx;
}
.left image:nth-of-type(1){
    margin-bottom: 8px;
}
.right image{
    width: 426rpx;
    height: 400rpx;
}
