page{
    background: #fafbfb;
}
.wrap{
    padding: 24rpx;
}
.charts{
    padding: 30rpx 30rpx 0;
    background: #fff;
    border-radius: 8px;
}
.chart-title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
}
.total-income{
    display: flex;
    align-items: center;
}
.total-text{
    font-size: 14px;
    color: rgba(0,0,0,0.41);
}
.today-income{
    font-size: 18px;
    font-family: SinHei;
    font-weight: 800;
    color: #F59798;
    margin-left: 16rpx;
}
.more{
    display: flex;
    align-items: center;
}
.more-text{
    width: 96rpx;
    height: 34rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 12px;
    color: rgba(0,0,0,0.41);
    margin-right: 16rpx;
}
.more image{
    width: 18rpx;
    height: 24rpx;
}
.charts-content{
    width: 650rpx;
    height: 350rpx;   
}

ec-canvas {
    width: 100%;
    height: 100%;
}
.income-box{
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}
.income-item{
    width: 200rpx;
    height: 180rpx;
    text-align: center;
    background: #fff;
    margin-top: 20rpx;
    border-radius: 5px;
}
.income{
    font-size: 22px;
    color:#F59798;
    margin-top: 44rpx;
}
.income-way{
    font-size: 12px;
    color: rgba(0,0,0,0.41);
}
