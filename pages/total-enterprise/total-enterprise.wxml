<view class="container">
    <view class="charts">
        <view class="total-enter">
            <view class="total-text">业绩汇总</view>
            <view class="total-income">
                <text class="dollar">￥</text>
                <text class="income">5,600</text>
            </view>
        </view>
        <view class="chart-area">
            <ec-canvas id="mychart-dom-bar" canvas-id="mychart-bar" ec="{{ ec }}"></ec-canvas>
        </view>
    </view>
    <view class="staff-list-title">
        <view class="staff-title">业绩列表</view>
        <view class="sift" bindtap="show">
            <view class="s-text">筛选</view>
            <view class="icon">
                <image src="/asset/images/sift.png" />
            </view>
        </view>
    </view>
    <scroll-view scroll-y="{{true}}">
        <view class="staff-goods-list">
            <block wx:for="{{[1,2,3,4,5,6]}}" wx:key="{{index}}">
                <navigator open-type="navigate" url="/pages/shop-enterprise/shop-enterprise">
                    <view class="staff-goods-item">
                        <view class="avatar">
                            <image src="/asset/images/t_pic1.png" />
                        </view>
                        <view class="g-list">
                            <view class="g-name">三只熊（上海店）</view>
                            <view class="g-spec">总业绩</view>
                        </view>
                        <view class="money">￥5,6000</view>
                    </view>
                </navigator>
            </block>
        </view>
    </scroll-view>
</view>
<!-- 筛选遮罩层 -->
<view class="shade" bindtap='hide' style='display:{{disp}}'></view>
<!-- 筛选内容区域 -->
<view class="conts" style='display:{{disp}}'>
    <view class="content">
        <view class="s-title" bindtap='hide'>筛选</view>
        <view class="s-time">
            <view class="text">时间区间</view>
            <view class="time-space">
                <view class="start-time">
                    <picker mode="date" value="{{date}}" start="2016-10-28" end="{{data2}}" bindchange="bindStartChange">
                        <view class="start-time">{{date}}</view>
                    </picker>
                </view>
                <view class="sep"></view>
                <view class="end-time">
                    <picker mode="date" value="{{date2}}" start="{{date}}" end="2030-09-01" bindchange="bindEndChange">
                        <view class="end-time">{{date2}}</view>
                    </picker>
                </view>
            </view>
        </view>
        <view class="s-line"></view>
        <view class="shop-name">
            <view class="text">所属店铺</view>
            <input type="text" class="client-content" />
        </view>
    </view>
    <view class="button">
        <view class="reset">重置</view>
        <view class="submit">确定</view>
    </view>
</view>